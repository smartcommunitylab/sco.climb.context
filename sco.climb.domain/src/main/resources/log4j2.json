{
	"configuration": {
	  "name": "Default",
	  "appenders": {
		"Console": {
		  "name": "Console-Appender",
		  "target": "SYSTEM_OUT",
		  "PatternLayout": {
			"pattern": "%d %p [%c] - %m%n"
		  }
		},
			  "RollingFile": [
				  {
					"name": "RollingFile-Appender",
					"fileName": "/Users/smartcommunitylab/Documents/work/tmp/logclimb/domain.log",
					"filePattern": "/Users/smartcommunitylab/Documents/work/tmp/logclimb/domain.log.%d{yyyy-MM-dd-hh-mm}",
					"PatternLayout": {
					  "pattern": "%d{MM-dd@HH:mm:ss} %-5p [%c] - %m%n"
					},
					"Policies": {
					  "SizeBasedTriggeringPolicy": {
						"size": "5MB"
					  }
					},
					"DefaultRolloverStrategy": {
					  "max": "25"
					}
				  },    
				  {
					"name": "LogstashFile-Appender",
					"fileName": "/Users/smartcommunitylab/Documents/work/tmp/logclimb/domain-logstash.log",
					"filePattern": "/Users/smartcommunitylab/Documents/work/tmp/logclimb/domain-logstash.log.%d{yyyy-MM-dd-hh-mm}",
					"PatternLayout": {
					  "pattern": "%m%n"
					},
					"Policies": {
					  "SizeBasedTriggeringPolicy": {
						"size": "5MB"
					  }
					},
					"DefaultRolloverStrategy": {
					  "max": "25"
					}
				  }
			  ]    
		  },
	  "loggers": {
		"logger": [
			{
			  "name": "it.smartcommunitylab.climb.domain.common.StatsLogger",
			  "level": "info",
			  "additivity": false,
			  "appender-ref": [{"ref": "LogstashFile-Appender", "level":"info"}]
			}
		  ],
		"root": {
		  "level": "info",
		  "appender-ref": [{"ref": "Console-Appender"}, {"ref": "RollingFile-Appender"}]
		}
	  }
	}
  }
  
